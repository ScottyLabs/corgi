{
    "name": "@scottylabs/corgi",
    "description": "ScottyLabs component library",
    "version": "0.3.1",
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "dependencies": {
        "@base-ui-components/react": "^1.0.0-beta.1",
        "@tailwindcss/vite": "^4.1.12",
        "@untitledui/icons": "^0.0.19",
        "cva": "^1.0.0-beta.4",
        "motion": "^12.23.12",
        "tailwind-merge": "^3.3.1",
        "tailwindcss": "^4.1.12",
        "vite-plugin-svgr": "^4.5.0"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.3.0",
        "@commitlint/cli": "^19.8.1",
        "@commitlint/config-conventional": "^19.8.1",
        "@microsoft/api-extractor": "^7.52.8",
        "@storybook/addon-docs": "^9.0.15",
        "@storybook/react-vite": "^9.0.15",
        "@types/bun": "^1.2.18",
        "@types/react": "^19.1.8",
        "@types/react-dom": "^19.1.6",
        "@vitejs/plugin-react-oxc": "^0.2.3",
        "husky": "^9.1.7",
        "madr": "^4.0.0",
        "storybook": "^9.0.15",
        "syncpack": "^13.0.4",
        "typescript": "^5.8.3",
        "vite": "npm:rolldown-vite@latest",
        "vite-plugin-dts": "^4.5.4"
    },
    "exports": {
        ".": {
            "types": "./dist/main.d.ts",
            "import": "./dist/main.js"
        },
        "./css": "./dist/corgi.css"
    },
    "files": [
        "dist"
    ],
    "license": "(MIT OR Apache-2.0)",
    "main": "dist/main.js",
    "peerDependencies": {
        "react": "^19.1.0",
        "react-dom": "^19.1.0"
    },
    "private": false,
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "tsc -b && vite build",
        "build-storybook": "storybook build",
        "check": "bun run check:ci -- --write --unsafe",
        "check:ci": "biome check --no-errors-on-unmatched --files-ignore-unknown=true",
        "preinstall": "npx only-allow bun",
        "prepare": "bunx husky",
        "prepublishOnly": "bun run build",
        "storybook": "storybook dev -p 26744",
        "syncpack": "syncpack lint",
        "syncpack:fix": "syncpack format && syncpack fix-mismatches",
        "syncpack:update": "syncpack update"
    },
    "type": "module",
    "types": "dist/main.d.ts"
}
