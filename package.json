{
    "name": "@scottylabs/corgi",
    "description": "ScottyLabs component library",
    "license": "(MIT OR Apache-2.0)",
    "private": false,
    "version": "0.1.0",
    "type": "module",
    "main": "dist/main.js",
    "types": "dist/main.d.ts",
    "files": [
        "dist"
    ],
    "sideEffects": [
        "**/*.css"
    ],
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "tsc -b && vite build",
        "storybook": "storybook dev -p 26744",
        "build-storybook": "storybook build",
        "check:ci": "biome check --no-errors-on-unmatched --files-ignore-unknown=true",
        "check": "bun run check:ci -- --write --unsafe",
        "preinstall": "npx only-allow bun",
        "prepublishOnly": "bun run build",
        "prepare": "husky"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "lint-staged": {
        "*": [
            "bun run check"
        ]
    },
    "peerDependencies": {
        "react": "^19.1.0",
        "react-dom": "^19.1.0"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.0.6",
        "@commitlint/cli": "^19.8.1",
        "@commitlint/config-conventional": "^19.8.1",
        "@microsoft/api-extractor": "^7.52.8",
        "@storybook/addon-docs": "^9.0.15",
        "@storybook/react-vite": "^9.0.15",
        "@vitejs/plugin-react-oxc": "^0.2.3",
        "@types/bun": "^1.2.18",
        "@types/react": "^19.1.8",
        "@types/react-dom": "^19.1.6",
        "husky": "^9.1.7",
        "lint-staged": "^16.1.2",
        "madr": "^4.0.0",
        "storybook": "^9.0.15",
        "typescript": "~5.8.3",
        "vite": "npm:rolldown-vite@latest"
    },
    "dependencies": {
        "@base-ui-components/react": "^1.0.0-beta.1",
        "@tailwindcss/vite": "^4.1.12",
        "cva": "^1.0.0-beta.4",
        "tailwind-merge": "^3.3.1",
        "tailwindcss": "^4.1.12"
    }
}
